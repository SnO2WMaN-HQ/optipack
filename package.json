{
  "name": "optipack",
  "version": "0.0.1",
  "description": "Optimizer for package.json",
  "license": "MIT",
  "scripts": {
    "lint": "run-s -cn lint:*",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:prettier": "prettier --check **/*.{json,yml,yaml,md}",
    "fmt": "run-s -cn fmt:*",
    "fmt:eslint": "yarn lint:eslint --fix",
    "fmt:prettier": "yarn lint:prettier --write",
    "test": "jest",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "^10.0.0",
    "@shopify/eslint-plugin": "^37.0.1",
    "@shopify/prettier-config": "^1.1.0",
    "@shopify/typescript-configs": "^3.0.1",
    "@types/jest": "^26.0.10",
    "eslint": "^7.8.1",
    "jest": "^26.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "^2.1.1",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.9.7"
  }
}
