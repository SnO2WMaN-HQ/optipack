{
  "name": "@optipack/root",
  "version": "0.0.1",
  "private": true,
  "description": "Optimizer for package.json",
  "author": {
    "email": "me@sno2wman.dev",
    "name": "SnO2WMaN"
  },
  "license": "MIT",
  "workspaces": [
    "@optipack/*"
  ],
  "scripts": {
    "build": "lerna run build --stream --parallel --include-dependencies",
    "clean": "lerna clean --yes && lerna exec 'git clean -xdf lib' && git clean -xdf node_modules",
    "fmt": "run-s -cn fmt:*",
    "fmt:eslint": "yarn lint:eslint --fix",
    "fmt:prettier": "yarn lint:prettier --write",
    "lint": "run-s -cn lint:*",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:prettier": "prettier --check **/*.{json,yml,yaml,md}",
    "test": "lerna run test --stream --parallel --include-dependencies"
  },
  "dependencies": {
    "@optipack/cli": "file:@optipack/cli",
    "@optipack/core": "file:@optipack/core",
    "prettier-plugin-optipack": "file:@optipack/prettier-plugin"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "^10.0.0",
    "@commitlint/config-lerna-scopes": "^9.1.2",
    "@optipack/cli": "file:@optipack/cli",
    "@shopify/eslint-plugin": "^37.0.1",
    "@shopify/prettier-config": "^1.1.0",
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.161",
    "@types/prettier": "^2.1.0",
    "conventional-changelog-cli": "^2.1.0",
    "eslint": "^7.8.1",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lodash": "^4.17.20",
    "npm-run-all": "4.1.5",
    "prettier": "^2.1.1",
    "prettier-plugin-optipack": "file:@optipack/prettier-plugin",
    "prettier-plugin-organize-imports": "^1.1.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.9.7"
  }
}
